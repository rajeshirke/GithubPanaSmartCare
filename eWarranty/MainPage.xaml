<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="eWarranty.MainPage"
            
             xmlns:i18n="clr-namespace:eWarranty.Hepler"
             Title="Login"
             FlowDirection="{x:Static Device.FlowDirection}">
   
    <Grid  VerticalOptions="FillAndExpand" Padding="0,-15,0,0" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
             
            <Grid Grid.Row="0" >
                <Image   Source="topbg.png" HorizontalOptions="Fill" Aspect="Fill"  />
            </Grid>
             
       
             
                <Grid Grid.Row="1" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
  
    <StackLayout Grid.Row="0" Padding="0,50,0,0">
       
       
        <Button Text="Submit Order" CornerRadius="5" TextColor="White" Clicked="Button_Clicked">
               
        </Button>
    </StackLayout>
          </Grid>
        </Grid>
</ContentPage>