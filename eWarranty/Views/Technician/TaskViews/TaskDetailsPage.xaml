<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eWarranty.Views.Technician.TaskViews.TaskDetailsPage"
              xmlns:contr="clr-namespace:eWarranty.Controls"
              xmlns:local="clr-namespace:eWarranty"
              xmlns:lang="clr-namespace:eWarranty.Hepler"
             xmlns:resource="clr-namespace:eWarranty.Resx"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
              xmlns:fontawesome="clr-namespace:eWarranty.Models" 
             x:Name="rootPage"
             Title="Job Details" BackgroundColor="{StaticResource contentBG}">
     <ContentPage.ToolbarItems>
        <ToolbarItem Name="MenuItem1" Order="Primary" Text="{Binding Estimate}"
                     Priority="0" Command="{Binding EstimateCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <AbsoluteLayout>
                <Grid   BackgroundColor="{StaticResource contentBG}"
                        Padding="10,10,10,0" VerticalOptions="FillAndExpand"
                        RowSpacing="0"
                        AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                        AbsoluteLayout.LayoutFlags="All">
                    <Grid.RowDefinitions>               
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>            
          
                    <Grid Grid.Row="0"  RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="1" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                                    
                            <Frame  Grid.Row="0" BorderColor="{StaticResource borderColor}" Style="{StaticResource FrameStyle}" BackgroundColor="White">
                                <Grid Padding="10,10,10,10"  BackgroundColor="White" >      
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>                                              
                                    </Grid.RowDefinitions>

                                    <Label Grid.Row="0" Text="Product Details" Style="{StaticResource LabelLargeBlack}"/>
                                    <contr:RoundedCornerView Grid.Row="1" Margin="0,0,0,0"  BorderColor="{StaticResource borderColor}" BorderWidth="2"  RoundedCornerRadius="5" BackgroundColor="White">
                                  
                                        <Grid Padding="5,2,5,2" >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>                                          
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Grid.Column="0" Text="Product" Style="{StaticResource MyTitleLabel}"/>
                                                <Label Grid.Column="1" >
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text=": " Style="{StaticResource MyTitleLabel}"/>
                                                                <Span Text="{Binding serviceRequest.ProductModel.ProductClassificationName}"    Style="{StaticResource MyValueLabel}"/>
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                    </Label>
                                            </Grid>
                                            <Grid Grid.Row="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Column="0" Text="Model No" Style="{StaticResource MyTitleLabel}"/>
                                                    <Label Grid.Column="1" >
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text=": " Style="{StaticResource MyTitleLabel}"/>
                                                                <Span Text="{Binding serviceRequest.ProductModel.ModelNumber}"    Style="{StaticResource MyValueLabel}"/>
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                    </Label>
                                                </Grid>
                                            <Grid Grid.Row="3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Grid.Column="0" Text="Serial No" Style="{StaticResource MyTitleLabel}"/>
                                                <Label Grid.Column="1" >
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text=": " Style="{StaticResource MyTitleLabel}"/>
                                                            <Span Text="{Binding serviceRequest.ProductModel.SerialNumber}"    Style="{StaticResource MyValueLabel}"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </Grid>
                                            <Grid Grid.Row="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Grid.Column="0" Text="Scheduled Date" Style="{StaticResource MyTitleLabel}"/>
                                                <Label Grid.Column="1" >
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text=": " Style="{StaticResource MyTitleLabel}"/>
                                                            <Span Text="{Binding serviceRequest.CustomerSrpreferredDateTime, StringFormat='{0:MMM dd, yyyy}'}"    Style="{StaticResource MyValueLabel}"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </Grid>
                                            <Grid Grid.Row="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Grid.Column="0" Text="Priorty" Style="{StaticResource MyTitleLabel}"/>
                                                <Label Grid.Column="1" >
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text=": " Style="{StaticResource MyTitleLabel}"/>
                                                            <Span Text="{Binding serviceRequest.PriorityName}"    Style="{StaticResource MyValueLabel}"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </Grid>
                                            <Grid Grid.Row="6">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Grid.Column="0" Text="Status" Style="{StaticResource MyTitleLabel}"/>
                                                <Label Grid.Column="1" >
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text=": " Style="{StaticResource MyTitleLabel}"/>
                                                            <Span Text="{Binding serviceRequest.ServiceRequestStatusName}"    Style="{StaticResource MyValueLabel}"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </Grid>
                                            <Grid Grid.Row="7">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Grid.Column="0" Text="Warranty Type" Style="{StaticResource MyTitleLabel}"/>
                                                <Label Grid.Column="1" >
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text=": " Style="{StaticResource MyTitleLabel}"/>
                                                            <Span Text="{Binding WarrantyStatus}"    Style="{StaticResource MyValueLabel}"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </Grid>
                                            <Grid Grid.Row="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Grid.Column="0" Text="Visit Location" Style="{StaticResource MyTitleLabel}"/>
                                                <Label Grid.Column="1" >
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text=": " Style="{StaticResource MyTitleLabel}"/>
                                                            <Span Text="{Binding RequestAddress}"    Style="{StaticResource MyValueLabel}"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </Grid>
                                        </Grid>
                                    </contr:RoundedCornerView>
                                </Grid>
                            </Frame>
                             
                        </Grid>
                        <Grid Grid.Row="0">
                            <Grid   Padding="0,8,0,8" >
                                <Grid.RowDefinitions>                                                     
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" HorizontalOptions="End">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Scheduled Date: " Style="{StaticResource MyTitleLabel}"/>                                        
                                            <Span Text="{Binding serviceRequest.CustomerSrpreferredDateTime, StringFormat='{0:MMM dd, yyyy}'}"    Style="{StaticResource MyValueLabel}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Grid.Row="0" Margin="10,0,10,0" Text="{Binding serviceRequest.ServiceRequestNumber}" TextColor="{StaticResource BlueColor}" Style="{StaticResource LabelLargeBlack}" HorizontalTextAlignment="Start"/>

                                <Frame Grid.Row="1" Style="{StaticResource FrameStyle}"  BackgroundColor="White">
                                    <Grid Grid.Row="0" Padding="15,10,15,10"  BackgroundColor="White">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>                                              
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Text="Customer Details" Style="{StaticResource LabelLargeBlack}"/>
                                        <contr:RoundedCornerView Grid.Row="1" Margin="0,0,0,0"  BorderColor="{StaticResource borderColor}"
                                                                    BorderWidth="2"  RoundedCornerRadius="5" BackgroundColor="White">                                  
                                            <Grid Padding="5,2,5,10" >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/> 
                                            </Grid.RowDefinitions>                                          
                                            <Grid Grid.Row="0" >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Grid.Column="0" Text="Name :" Style="{StaticResource MyTitleLabel}"/>
                                                <Label Grid.Column="1" >
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding serviceRequest.CustomerPerson.FirstName}" Style="{StaticResource MyValueLabel}" />
                                                            <Span Text=" "/>
                                                            <Span Text="{Binding serviceRequest.CustomerPerson.LastName}" Style="{StaticResource MyValueLabel}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </Grid>

                                            <Grid Grid.Row="1" >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>                                                      
                                                </Grid.ColumnDefinitions>
                                                <Label Grid.Column="0" >                                                      
                                                        <Label.FormattedText>
                                                        <FormattedString>                                                                
                                                            <Span Text="Mobile No : " Style="{StaticResource MyTitleLabel}" />
                                                            <Span Text=" "/>
                                                            <Span Text="{Binding MobileNumber}" Style="{StaticResource MyValueLabel}"/>
                                                        </FormattedString>
                                                        </Label.FormattedText>
                                                </Label>
                                            </Grid>

                                            <Grid Grid.Row="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Grid.Column="0" Text="Remarks" Style="{StaticResource MyTitleLabel}"/>
                                                <Label Grid.Column="1" >
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text=": " Style="{StaticResource MyTitleLabel}" />
                                                            <Span Text="{Binding serviceRequest.CustomerRemark}"  Style="{StaticResource MyValueLabel}"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </Grid>
                                            <Grid BackgroundColor="White" Grid.Row="3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="5*"/>
                                                        <ColumnDefinition Width="1"/>
                                                        <ColumnDefinition Width="5*"/>
                                                </Grid.ColumnDefinitions>
                                                <!--<Frame Grid.Column="0" BackgroundColor="{StaticResource BlueColor}" >
            
                                                <Grid HorizontalOptions="Center">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Text="Call" Style="{StaticResource MyTitleLabel}" TextColor="White" Grid.Column="1" HorizontalOptions="End"  VerticalTextAlignment="Center" FontAttributes="Bold" />
                                                    <Image Source="scphonecall" Grid.Column="0" HorizontalOptions="Start" WidthRequest="20"/>
                                                        <Grid.GestureRecognizers>
                                                            <TapGestureRecognizer
                                                                    Command="{Binding CustCallCommand}" />
                                                        </Grid.GestureRecognizers>
                                                </Grid>
                                            </Frame> ImageSource="scphonecall" -->
                                                <Button Grid.Column="0"  
                                                        Style="{StaticResource ButtonBlueStyle}" Command="{Binding CustCallCommand}" >
                                                    <Button.ImageSource>
                                                        <FontImageSource FontFamily="{StaticResource FontAwesomeSolid}" 
                                                                Glyph="{x:Static fontawesome:Solid.Phone}"
                                                                Color="{StaticResource WhiteColor}" Size="25"/>
                                                    </Button.ImageSource>
                                                </Button>
                                                <BoxView Grid.Column="1" BackgroundColor="Transparent"/>

                                                <Button Grid.Column="2"  
                                                        Style="{StaticResource ButtonBlueStyle}" Command="{Binding CustLocationCommand}" >
                                                    <Button.ImageSource>
                                                        <FontImageSource FontFamily="{StaticResource FontAwesomeSolid}" 
                                                                Glyph="{x:Static fontawesome:Solid.Location_Arrow}"
                                                                Color="{StaticResource WhiteColor}" Size="25"/>
                                                    </Button.ImageSource>
                                                </Button>

                                                <!--<contr:RoundedCornerView Grid.Column="2" RoundedCornerRadius="5" BorderColor="LightGray" BorderWidth="1" BackgroundColor="{StaticResource YellowColorShade3}">
   
                                                <Grid HorizontalOptions="Center">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Text="Location" TextColor="White" Style="{StaticResource MyTitleLabel}" Grid.Column="1" FontAttributes="Bold" HorizontalOptions="End"  VerticalTextAlignment="Center"/>
                                                    <Image Source="sclocation" Grid.Column="0" HorizontalOptions="Start" WidthRequest="20"/>
                                                        <Grid.GestureRecognizers>
                                                            <TapGestureRecognizer
                                                                    Command="{Binding CustLocationCommand}" />
                                                        </Grid.GestureRecognizers>
                                                </Grid>
                                                </contr:RoundedCornerView>-->
                                            </Grid> 
                                        </Grid>

                                        </contr:RoundedCornerView>
                                    </Grid> 
                                </Frame>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Frame  Margin="0,8,0,0"  Style="{StaticResource FrameStyle}" BackgroundColor="White">
                                <Grid Padding="15,10,15,10" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <!--<RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>-->                                        
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0" Text="Job Details"   Style="{StaticResource LabelLargeBlack}"/>
                                    <Label Grid.Row="1"     >
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Product Malfunction : " Style="{StaticResource MyTitleLabel}"/>                                                             
                                                <Span Text="{Binding serviceRequest.CustomerRemark}" Style="{StaticResource MyValueLabel}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <!--<contr:TitleDropdownView Grid.Row="2" Title="Priority" PickerItemsSource="{Binding PriorityTypes}" ItemDisplayBinding="Title"  SelectedItem="{Binding SelectedPriorityType}" Command="{Binding PriorityTypesCommand}" />-->
                                    <Grid Grid.Row="2" HeightRequest="60" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="130"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                            <RowDefinition Height="1"/>
                                            </Grid.RowDefinitions>
                                            <Label Text="Preferred Date &amp; time" Style="{StaticResource MyTitleLabel}"
                                                    Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                                            <DatePicker IsEnabled="False" x:Name="dPicker" Margin="0,0,0,0" Style="{StaticResource MyTitleLabel}"
                                                        Format="dd MMM yyyy" VerticalOptions="End" Grid.Row="1"  Grid.Column="0" Grid.ColumnSpan="3"  MinimumDate="{x:Static sys:DateTime.Today}"  Date="{Binding SDDate}"  
                                                    BackgroundColor="White"
                                                    >
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="CommonStates">
                                                        <VisualState x:Name="Disabled">
                                                            <VisualState.Setters>
                                                                <Setter Property="TextColor" Value="Black" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                            </DatePicker>
                                            <TimePicker IsEnabled="False" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0"  Format="hh mm tt"
                                                        Time="{Binding SDTimeSpan}" Style="{StaticResource TimePickerStyle}" VerticalOptions="End" >
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="CommonStates">
                                                        <VisualState x:Name="Disabled">
                                                            <VisualState.Setters>
                                                                <Setter Property="TextColor" Value="Black" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                            </TimePicker>
                                        <BoxView Grid.Row="2" Grid.Column="0" BackgroundColor="#DADADA" Margin="0,0,0,0" />
                                        <BoxView Grid.Row="2" Grid.Column="1"  BackgroundColor="#DADADA" Margin="5,0,0,0" />
                                        <!--<Button Grid.Row="1" WidthRequest="150"  Grid.Column="2"
                                                Command="{Binding UpdateTaskCommand}"
                                                Text="Reschedule" Style="{StaticResource ButtonBlueStyle}" HorizontalOptions="End"
                                                Padding="0,0,0,0"/>-->
                                    </Grid>
                                    <contr:TitleDropdownView Grid.Row="3" Title="Service Location" PickerItemsSource="{Binding ServiceLocations}" ItemDisplayBinding="Title"  SelectedItem="{Binding SelectedServiceLocation}" Command="{Binding ServiceLocationCommand}" />
                                    <contr:TitleDropdownView Grid.Row="4" Title="Job Status" PickerItemsSource="{Binding JobStatusList}" ItemDisplayBinding="Title"  SelectedItem="{Binding SelectedJobStatus}" Command="{Binding JobStatusCommand}" />
                                    <!--<Grid Grid.Row="6">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <CheckBox Grid.Row="0" Grid.Column="0" HorizontalOptions="Start"  IsChecked="{Binding IsCheckStandbysetrequest}" VerticalOptions="Center"/>
                                            <Label Grid.Row="0" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center"  Text="{x:Static resource:AppResources.lblStandbysetrequest}" Style="{StaticResource MyTitleLabel}" TextColor="{StaticResource NavigationPrimary}">                                            
                                            </Label>
                                            <Button Grid.Row="0" Grid.Column="2" FontSize="12" HeightRequest="35" WidthRequest="80" Text="Send" Style="{StaticResource ButtonBlueStyle}" Command="{Binding StandbysetRequestCommand}"/>
                                    </Grid>-->                                
                                    <!--<Grid Grid.Row="6">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="60"/>
                                            <RowDefinition Height="1"/>
                                        </Grid.RowDefinitions>
                                        <Label Text="Tech Remarks :" Style="{StaticResource MyTitleLabel}" Grid.Row="0"  HorizontalTextAlignment="Start"/>
                                        <contr:ImageEntry Placeholder="Remarks" BackgroundColor="White" Grid.Row="1"  Style="{StaticResource EnteryTxtValues}"
                                                          Text="{Binding serviceRequest.TechnicianComments}"/>
                                        <BoxView BackgroundColor="LightGray" Grid.Row="2" /> 
                                    </Grid>-->

                                </Grid>
                            </Frame>
                        </Grid>
                        <Button Text="Update" HeightRequest="50" Grid.Row="4" IsVisible="{Binding IsVisibleUpdate}"
                                Command="{Binding UpdateTaskCommand}" Style="{StaticResource ButtonBlueStyle}"/>
                        <Grid Grid.Row="6" RowSpacing="0" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="5*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalOptions="Center" RowSpacing="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="100"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" HorizontalTextAlignment="Center" Style="{StaticResource MyTitleLabel}" Text="Product Image" VerticalOptions="Center" />
                                <Image Grid.Row="1" Source="{Binding ProductImagePath1}"  Aspect="AspectFill">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Tapped="TapGestureRecognizer_Tapped_2"
                                            Command="{Binding ViewImageCommand}"/>
                                    </Image.GestureRecognizers>
                                </Image>
                            </Grid>

                            <Grid Grid.Column="1" HorizontalOptions="Center" RowSpacing="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="100"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Style="{StaticResource MyTitleLabel}" HorizontalTextAlignment="Center" Text="Purchase Invoice" VerticalOptions="Center" />
                                <Image Grid.Row="1" Source="{Binding InvoiceImagePath1}"  Aspect="AspectFill">
                                    <Image.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Tapped="TapGestureRecognizer_Tapped_3"
                                        Command="{Binding ViewImageCommand}"/>
                                </Image.GestureRecognizers>
                                    </Image>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="7" RowSpacing="0" IsVisible="false" >
                               <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*"/>
                                    <ColumnDefinition Width="5*"/>
                               </Grid.ColumnDefinitions>
                               <Grid Grid.Column="0" HorizontalOptions="Center" RowSpacing="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="100"/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0" Style="{StaticResource MyTitleLabel}" HorizontalTextAlignment="Center" Text="Product Label" VerticalOptions="Center" />
                                    <Image Grid.Row="1" Source="{Binding ProductImagePath1}"  Aspect="AspectFill">
                                        <!--<Image.Source>
                                            <UriImageSource Uri="{Binding ProductImagePath1}" />
                                        </Image.Source>-->
                                    </Image>
                                </Grid>

                                <Grid Grid.Column="1" HorizontalOptions="Center" RowSpacing="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="100"/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0" Style="{StaticResource MyTitleLabel}" HorizontalTextAlignment="Center"  Text="Purchase Invoice" VerticalOptions="Center" />
                                    <Image Grid.Row="1" Source="{Binding InvoiceImagePath1}"  Aspect="AspectFill">
                                        <!--<Image.Source>
                                            <UriImageSource Uri="{Binding InvoiceImagePath1}" />
                                        </Image.Source>-->
                                    </Image>
                                </Grid>
                            </Grid> 
                    </Grid>
                </Grid>

                <!--<contr:LoaderAnimView
                    AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1"
                    AbsoluteLayout.LayoutFlags="PositionProportional"/>-->
            </AbsoluteLayout>            
        </ScrollView>
    </ContentPage.Content>
</ContentPage>