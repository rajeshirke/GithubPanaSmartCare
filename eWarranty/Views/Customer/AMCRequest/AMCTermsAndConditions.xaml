<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="eWarranty.Views.Customer.AMCRequest.AMCTermsAndConditions"
    xmlns:resource="clr-namespace:eWarranty.Resx">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>                     
            <Label x:Name="lblAMCTerms"
                   Margin="50" 
                   TextType="Text"
                   Grid.Row="0"
                   Style="{StaticResource LabelLargeBlack}"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand" />
            <Grid Grid.Row="1" >
                <Grid  Padding="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Row="0" Text="{x:Static resource:AppResources.lblAgreed}"
                            Style="{StaticResource ButtonBlueStyle}"
                            WidthRequest="100" Clicked="Button_Clicked" />
                </Grid>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
