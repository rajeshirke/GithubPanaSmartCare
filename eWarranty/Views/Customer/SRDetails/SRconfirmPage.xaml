                            <RowDefinition Height="1"/>
                        </Grid.RowDefinitions>
                        <Label
                            Text="{x:Static resource:AppResources.lblPreferredDatetime}"                        
                            Style="{StaticResource MyTitleLabel}"
                            Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
