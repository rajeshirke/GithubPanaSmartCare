                                    Style="{StaticResource MyValueLabel}"
                                    Format="dd MMM yyyy"                                
                                    VerticalOptions="Center" Grid.Row="1"
                                    Grid.Column="0" Grid.ColumnSpan="3"
                                    MinimumDate="{Binding MinDate}"
                                    Date="{Binding SDDate}"
                                    DateSelected="dPicker_DateSelected"
                                    BackgroundColor="White" />
